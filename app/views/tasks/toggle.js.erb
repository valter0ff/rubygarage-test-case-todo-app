<% if @task.completed? %>

	$('#<%= dom_id(@task,"checkbox") %>').parent().next().addClass("text-decor-line")
		.next().children().first().addClass("d-none");
		
	$('li#<%=dom_id(@task)%>').addClass("light-blue");
	
<% else %>

	$('#<%= dom_id(@task,"checkbox") %>').parent().next().removeClass("text-decor-line")
	.next().children().first().removeClass("d-none");
	
	$('li#<%= dom_id(@task)%>').removeClass("light-blue");
	
<% end %>
